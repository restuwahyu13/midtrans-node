{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ESNext",
		"module": "UMD",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"declaration": true,
		"noEmitOnError": true,
		"sourceMap": false,
		"strict": false,
		"alwaysStrict": false,
		"noImplicitAny": false,
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "__test__/**/*.{test.ts,spec.ts}", "coverage"]
}
